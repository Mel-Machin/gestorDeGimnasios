@{
}
@model gestorDeGimnasios.Models.Local


<form asp-action="AccionEditarLocal" method="post">

    <div class="form-group">
        @Html.LabelFor(model => model.IdLocal, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.IdLocal, new { @class = "form-control", type = "number", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Nombre, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ciudad, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Ciudad, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Direccion, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Telefono, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdResponsable, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.IdResponsable, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.IdResponsable, "", new { @class = "text-danger" })
    </div>
    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
</form>