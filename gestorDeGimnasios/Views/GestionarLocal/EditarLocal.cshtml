@{
}
@model gestorDeGimnasios.Models.Local

<h2 class="mainTitulo">Modificar Local</h2>
<div class="mainContenido">
<form asp-action="AccionEditarLocal" method="post" class="formulario">


    @Html.LabelFor(model => model.IdLocal, htmlAttributes: new { @class = "label" })
    @Html.TextBoxFor(model => model.IdLocal, new { @class = "input", type = "number", @readonly = "readonly" })
    <div></div>


    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.Nombre, new { @class = "input", type = "text", required = "required", placeholder="Ingrese nombre" })
    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "textoAdvertencia" })



    @Html.LabelFor(model => model.Ciudad, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.Ciudad, new { @class = "input", type = "text", required = "required", placeholder="Ingrese nombre de la ciudad" })
    @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "textoAdvertencia" })



    @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.Direccion, new { @class = "input", type = "text", required = "required" , placeholder="Ingrese la dirección"})
    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "textoAdvertencia" })



    @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.Telefono, new { @class = "input", type = "text", required = "required", placeholder="Ingrese el teléfono o celular" })
    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "textoAdvertencia" })



    @Html.LabelFor(model => model.IdResponsable, htmlAttributes: new { @class = "label" })
        <select name="IdResponsable" class="input" required="required">
            <option value="" disabled selected>Selecciona un Responsable</option>
        @foreach (Responsable responsable in (IEnumerable<Responsable>)ViewData["responsables"])
        {
            <option value="@responsable.IdResponsable">@responsable.Nombre</option>
        }
    </select>
    @Html.ValidationMessageFor(model => model.IdResponsable, "", new { @class = "textoAdvertencia" })


    <input type="submit" value="Guardar cambios" class="boton" />
    
</form>
    <div asp-validation-summary="All" class="textoAdvertencia"></div>

</div>