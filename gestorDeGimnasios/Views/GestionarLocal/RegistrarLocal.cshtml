@{
}
@model gestorDeGimnasios.Models.Local


<form asp-action="AccionRegistrarLocal" method="post">

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ciudad, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Ciudad, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
    </div>

    <div>
        <select name="idResponsable">
            @foreach (Responsable responsable in (IEnumerable<Responsable>)ViewData["responsables"])
            {
                <option value="responsable.IdResponsable"> @responsable.Nombre </option>
            }
        </select>
        @Html.ValidationMessageFor(model => model.IdResponsable, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Guardar registro" class="btn btn-primary" />
</form>