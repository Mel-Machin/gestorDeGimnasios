@{
}

@model gestorDeGimnasios.Models.SocioRutina

<h2 class="mainTitulo">Modificar Asignación de Rutina a Socio</h2>

<div class="mainContenido">
    <form asp-action="AccionEditarSocioRutina" method="post" class="formulario">



        @Html.LabelFor(model => model.IdSocio, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.IdSocio, new { @class = "input", type = "text", @readonly = "readonly", value = Model.IdSocio })
        @Html.ValidationMessageFor(model => model.IdSocio, "", new { @class = "textoAdvertencia" })


        @Html.LabelFor(model => model.IdRutina, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.IdRutina, new { @class = "input", type = "text", @readonly = "readonly", value = Model.IdRutina })
        @Html.ValidationMessageFor(model => model.IdRutina, "", new { @class = "textoAdvertencia" })


        @Html.LabelFor(model => model.FechaInicio, htmlAttributes: new { @class = "label" })
        <input asp-for="FechaInicio" class="input" type="date"  />
       

        @Html.LabelFor(model => model.FechaFin, htmlAttributes: new { @class = "label" })
        <input asp-for="FechaFin" class="input" type="date"  />
      


        @Html.LabelFor(model => model.Calificacion, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.Calificacion, new { @class = "input", type = "number", required = "required" })
        @Html.ValidationMessageFor(model => model.Calificacion, "", new { @class = "textoAdvertencia" })


        <input type="submit" value="Guardar cambios" class="boton" />
    </form>
</div>