@{
}

<h2 class ="mainTitulo">Administrar Responsables</h2>
<div class="mainContenido">


    @Html.ActionLink("Registrar", "RegistrarResponsable", null,null, new { @class = "link h3" })

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Responsable responsable in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => responsable.IdResponsable)</td>
                <td>@Html.DisplayFor(modelItem => responsable.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => responsable.Telefono)</td>
                <td>
                    @Html.ActionLink("Editar", "EditarResponsable", new { idResponsable = responsable.IdResponsable }, new { @class = "link" })
                    @Html.ActionLink("Eliminar", "EliminarResponsable", new { idResponsable = responsable.IdResponsable }, new { @class = "link" })
                  
                </td>
            </tr>
        }
    </tbody>
</table>
</div>