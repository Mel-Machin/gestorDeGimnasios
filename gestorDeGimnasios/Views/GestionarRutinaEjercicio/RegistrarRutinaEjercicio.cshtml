@{
}
@{
    var ejercicios = ViewData["ejercicios"] as List<Ejercicio>;
    Rutina rutina = (Rutina)ViewData["rutina"];
}

<h2 class="mainTitulo">Agregar Ejercicios a rutina @rutina.Descripcion</h2>

<div class="mainContenido">
    <form asp-action="AccionRegistrarRutinaEjercicio" method="post" class="formulario">

        <label for="idRutina" class="label">ID Rutina</label>
        <input id="idRutina" type="text" name="idRutina" value="@rutina.IdRutina" class="input" readonly />
        <div></div>

        <label for="idEjercicio" class="label">Ejercicio</label>
        <select id="idEjercicio" name="idEjercicio" class="input" required="required">
            <option value="" disabled selected>Seleccione una opción</option>
            @foreach (Ejercicio ejercicio in ejercicios)
            {
                <option value="@ejercicio.IdEjercicio">@ejercicio.IdEjercicio</option>
            }
        </select>
        <div></div>

        <button type="submit" class="boton">Guardar registro</button>
    </form>
    <div asp-validation-summary="All" class="textoAdvertencia"></div>

</div>