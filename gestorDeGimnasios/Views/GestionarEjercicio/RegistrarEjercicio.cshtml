@{
}
@model gestorDeGimnasios.Models.Ejercicio

<h2 class="mainTitulo">Registrando Ejercicio</h2>
<div class="mainContenido">
    <form asp-action="AccionRegistrarEjercicio" method="post" class="formulario">


        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.Descripcion, new { @class = "input", type = "text", required = "required", placeholder="Ingrese la descripción del ejercicio" })
        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "textoAdvertencia" })

        @Html.Label("IdTipoMaquina", "Tipo de Máquina", htmlAttributes: new { @class = "label" })
        <select asp-for="IdTipoMaquina" asp-items="@(new SelectList(ViewData["tiposMaquinas"] as IEnumerable<TipoMaquina>, "IdTipoMaquina", "Nombre"))" class="input" required="required">
            <option value="" disabled selected>Seleccione una opción</option>
        </select>
        @Html.ValidationMessageFor(model => model.IdTipoMaquina, "", new { @class = "textoAdvertencia" })

        <input type="submit" value="Guardar registro" class="boton" />

    </form>
</div>
