@{
}
@model gestorDeGimnasios.Models.Ejercicio


<form asp-action="AccionEditarEjercicio" method="post">
    <div class="form-group">
        @Html.LabelFor(model => model.IdEjercicio, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.IdEjercicio, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", Type="text" } })
        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdTipoMaquina, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.IdTipoMaquina, new { htmlAttributes = new { @class = "form-control", Type="number"} })
        @Html.ValidationMessageFor(model => model.IdTipoMaquina, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
</form>
