@{
}
@model gestorDeGimnasios.Models.Socio


<form asp-action="AccionRegistrarSocio" method="post">

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label" })
        <select asp-for="Tipo" class="form-control">
            <option value="" disabled selected>Seleccione tipo de socio</option>
            <option value="premium">Premium</option>
            <option value="estandar">Estándar</option>
            <option value="básico">Básico</option>
        </select>
        @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CorreoElectronico, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control", type = "text" })
        @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdLocal, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.IdLocal, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.IdLocal, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Guardar registro" class="btn btn-primary" />
</form>