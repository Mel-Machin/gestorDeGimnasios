@{
}
@model gestorDeGimnasios.Models.Maquina


<form asp-action="AccionEditarMaquina" method="post">

    <div class="form-group">
        @Html.LabelFor(model => model.IdMaquina, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.IdMaquina, new { @class = "form-control", type = "number", @readonly = "readonly" })
    </div>

    <div class="form-group">
        <select name="IdLocal">
        @foreach (Local local in (IEnumerable<Local>)@ViewData["locales"])
        {
            <option value="@local.IdLocal">@local.Nombre</option>
        }
        </select>
        @Html.ValidationMessageFor(model => model.IdLocal, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <select name="IdTipoMaquina">
            @foreach(TipoMaquina tipoMaquina in (IEnumerable<TipoMaquina>)@ViewData["tiposMaquinas"])
            {
                <option value="@tipoMaquina.IdTipoMaquina">@tipoMaquina.Nombre</option>
            }
        </select>
        @Html.ValidationMessageFor(model => model.IdTipoMaquina, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaCompra, htmlAttributes: new { @class = "control-label", type = "date" })
        <input type="date" id="FechaCompra" name="FechaCompra" class="form-control" value="@Model.FechaCompra.ToString("yyyy-MM-dd")" />
        @Html.ValidationMessageFor(model => model.FechaCompra, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.VidaUtil, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.VidaUtil, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.VidaUtil, "", new { @class = "text-danger" })
    </div>
                        
    <div class="form-group">
        @Html.LabelFor(model => model.Disponibilidad, htmlAttributes: new { @class = "control-label" })
             <select asp-for="Disponibilidad" class="form-control">
                 <option value="" disabled selected>Seleccione un disponibilidad</option>
                 <option value="no disponible">No disponible</option>
                 <option value="en reparacion">En reparacion</option>
                 <option value="disponible">Disponible</option>
            </select>
        @Html.ValidationMessageFor(model => model.Disponibilidad, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
</form>