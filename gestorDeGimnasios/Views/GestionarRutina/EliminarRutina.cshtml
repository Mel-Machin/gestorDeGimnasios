@{
}
@model gestorDeGimnasios.Models.Rutina


<form asp-action="AccionEliminarRutina" method="post">

    <div class="form-group">
        @Html.LabelFor(model => model.IdRutina, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.IdRutina, new { @class = "form-control", type = "number", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TipoRutina, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.TipoRutina, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.TipoRutina, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CalificacionRutinaPromedio, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.CalificacionRutinaPromedio, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.CalificacionRutinaPromedio, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Eliminar" class="btn btn-primary" />
</form>