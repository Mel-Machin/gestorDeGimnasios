@{
}
@model gestorDeGimnasios.Models.TipoMaquina

<h2 class="mainTitulo">Modificar Tipo de Maquina</h2>
<div class="mainContenido">
    <form asp-action="AccionEditarTipoMaquina" method="post" class="formulario">


        @Html.LabelFor(model => model.IdTipoMaquina, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.IdTipoMaquina, new { @class = "input", type = "number", @readonly = "readonly" })
        <div></div>

        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "label" })
        @Html.TextBoxFor(model => model.Nombre, new { @class = "input", type = "text", required = "required" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "textoAdvertencia" })


        <input type="submit" value="Guardar cambios" class="boton" />
    </form>
</div>
